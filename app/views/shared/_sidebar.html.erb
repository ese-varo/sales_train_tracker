<div class="h-full bg-gray-800 flex flex-col">
  <div class="flex items-center justify-center h-16 bg-gray-900">
    <h1 class="text-white font-bold text-xl">Train Ticket System</h1>
  </div>

  <nav class="mt-5 flex-1 px-2 space-y-1">
    <% if current_user.cashier? %>
      <%= link_to "Nueva Venta", new_sale_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-white hover:bg-gray-700" %>
      <%= link_to "Mis Ventas", sales_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-white hover:bg-gray-700" %>
    <% end %>

    <% if current_user.manager? || current_user.owner? %>
      <%= link_to "Dashboard", reports_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-white hover:bg-gray-700" %>
      <%= link_to "Reporte Diario", daily_reports_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-white hover:bg-gray-700" %>
      <%= link_to "Reporte Mensual", monthly_reports_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-white hover:bg-gray-700" %>
      <%= link_to "Ventas", sales_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-white hover:bg-gray-700" %>
      <%= link_to "Usuarios", users_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-white hover:bg-gray-700" %>
      <%= link_to "Sucursales", locations_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-white hover:bg-gray-700" %>
    <% end %>

    <div class="border-t border-gray-700 pt-4 mt-4">
      <%= link_to "Cerrar Sesion", login_path, data: { "turbo-method": :delete }, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-white hover:bg-gray-700" %>
    </div>
  </nav>
</div>
